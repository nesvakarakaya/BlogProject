@{
    ViewData["Title"] = "Profile Page";
}
<div class="text-center ">
    <h1 class="display-4">My profile</h1>
    <hr />
</div>
<div class="row mt-4">
    <div class="col-12">
        <div class="mb-4">
            <div asp-validation-summary="All" class="text-danger small"></div>
        </div>
    </div>
    <div class="col-6 " style="margin-top: 123px;">
        <form method="post" asp-action="ProfileChangeFullName">

            <label class="form-label">Name-Surname</label>
            <div class="input-group mb-3">
                <input name="fullname" type="text" class="form-control" placeholder="Recipient's username" value="@ViewData["FullName"]" />
                <button class="btn btn-secondary" type="submit">Save</button>
            </div>
        </form>
        <form method="post" asp-action="ProfileChangePassword">

            <label class="form-label">New  Password</label>
            <div class="input-group ">
                <input name="password" type="password" class="form-control" placeholder="New Password" />
                <button class="btn btn-secondary" type="submit">Save</button>
            </div>
            @if (ViewData["result"] != null && ViewData["result"] == "PasswordChanged")
            {
                <span class="text-successs small">
                    Password Updated
                </span>
            }
        </form>
    </div>
    <div class="col-6">
        <form method="post" asp-action="ProfileChangeImage" enctype="multipart/form-data">
            <div class="text-center">
                <img src="~/uploads/@ViewData["ProfileImage"] " class="img-thumbnail rounded-circle bg-black img-fluid" width="125" alt="" />
            </div>
            <label>
               Profile Image
            </label>
            <span class="small text-danger">/ Only jpg files !</span>
            <input type="file" name="file" class="form-control" accept=".jpg,.jpeg" />
            <button type="submit" class="btn btn-secondary">
                Save
            </button>
        </form>
    </div>
</div>

@section Scripts{
    @if (ViewData["result"] != null && ViewData["result"] == "PasswordChanged")
    {
        <script>
            toastr["success"]("Password is changed", "Password ")

        </script>
    }


}